    local cmp = require('cmp')
    local cmp_action = require('lsp-zero').cmp_action()
  
    -- load snippets
    require('luasnip.loaders.from_lua').lazy_load({ paths = './snippets/' })
    require('luasnip.loaders.from_vscode').lazy_load()
  
  
